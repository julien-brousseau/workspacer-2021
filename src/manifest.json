{
  "manifest_version": 2,
  "name": "__MSG_wsName__",
  "homepage_url": "https://github.com/julien-brousseau/workspacer",
  "description": "__MSG_wsDescription__",
  "version": "1.2.0",
  "icons": { "48": "/icons/48.svg" },
  "default_locale": "en",
  
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "contextualIdentities"
  ],

  "background": {
    "page": "js/background/index.html"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_wsName__",
    "browser_style": true,
    "default_icon": { "48": "/icons/48.svg" }
  },
  
  "content_security_policy": "script-src 'self' ; object-src 'self'"
}
